# Environment Configuration

# Database
DB_PASSWORD=your_strong_password_here_123
DATABASE_URL=postgresql://utility_user:${DB_PASSWORD}@postgres:5432/utility_db

# Redis
REDIS_PASSWORD=your_redis_password_here_456
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Application
SECRET_KEY=your-super-secret-key-change-this-to-random-string
ENVIRONMENT=production
API_PREFIX=/api

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Domain (optional, for SSL)
DOMAIN=yourdomain.com

# JWT
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/app/uploads
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,bmp,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,txt

# Face Recognition
FACE_RECOGNITION_TOLERANCE=0.6
FACE_DETECTION_MODEL=hog
MAX_FACE_DISTANCE=0.6

# OCR
OCR_LANGUAGES=eng+vie
TESSERACT_CMD=/usr/bin/tesseract

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring
ENABLE_METRICS=true
ENABLE_SENTRY=false
SENTRY_DSN=
